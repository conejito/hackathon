{
  "database": {
    "rules": "database.rules.json"
  },
  "hosting": {
    "public": "build",
    "ignore": [
      "**/node_modules/**",
      "**/.*",
      "node_modules/**",
      "**/public/**",
      "**/src/**",
      ".gitignore",
      "firebase.json",
      "package.json",
      "README.md",
      "yarn.lock"
    ],
    "rewrites": [
      {
        "source": "/helloworld",
        "function": "helloWorld"
      },
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  },
  "storage": {
    "rules": "storage.rules"
  }
}
